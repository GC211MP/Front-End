<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgentInfo">


    <TextView
        android:id="@+id/information"
        android:layout_width="178dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="#00ff0000"
        android:gravity="center"
        android:text="Information"
        android:textColor="@color/warm_white"
        android:textSize="30dp" />

    //초상화
    <ImageView
        android:id="@+id/portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/information"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/man_portrait" />

    //이름
    <TextView
        android:id="@+id/agent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portrait"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/warm_white"
        android:text="Name"
        android:textSize="17dp"
        />
    //키
    <TextView
        android:id="@+id/agent_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agent_name"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/warm_white"
        android:text="Height"
        android:textSize="17dp"
        />
    //몸무게
    <TextView
        android:id="@+id/agent_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agent_height"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/warm_white"
        android:text="Weight"
        android:textSize="17dp"
        />
    //총 거리
    <TextView
        android:id="@+id/agent_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agent_weight"
        android:textColor="@color/warm_white"
        android:text="Total distance : "
        />
    <TextView
        android:id="@+id/agent_colories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agent_distance"
        android:textColor="@color/warm_white"
        android:text="Total colories : "
        />

<!--    <View
        android:layout_width="341dp"
        android:layout_height="570dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@color/dusty_rose"
        android:gravity="center"
        android:text="Information" />-->

    /* menu bar */

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/AgentInfoButton"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:scaleType="centerInside"
            android:src="@drawable/agent_info"/>

        <ImageButton
            android:id="@+id/HomeButton"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:scaleType="centerInside"
            android:src="@drawable/home"/>

        <ImageButton
            android:id="@+id/CommunityButton"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:scaleType="centerInside"
            android:src="@drawable/community"/>

    </LinearLayout>

</RelativeLayout>