<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectStage">

    /* stage buttons */

    <Button
        android:id="@+id/PrologueStageButton"
        android:layout_width="350dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:text="Prologue"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Stage1Button"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_below="@id/PrologueStageButton"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/dusty_rose"
        android:text="Stage1"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Stage2Button"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_below="@id/PrologueStageButton"
        android:layout_alignParentRight="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="20dp"
        android:text="Stage2"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Stage3Button"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_below="@id/Stage1Button"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Stage3"
        android:textSize="20dp"/>


    <Button
        android:id="@+id/Stage4Button"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_below="@id/Stage1Button"
        android:layout_alignParentRight="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="Stage4"
        android:textSize="20dp" />
    -->


</RelativeLayout>