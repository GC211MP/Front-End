<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <Button
        android:id="@+id/TutorialStageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Tutorial"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/Stage1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TutorialStageButton"

        android:text="Stage1"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/Stage2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TutorialStageButton"
        android:layout_alignParentRight="true"
        android:text="Stage2"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/Stage3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Stage1Button"

        android:text="Stage3"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/Stage4Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Stage1Button"
        android:layout_alignParentRight="true"
        android:text="Stage3"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/AgentInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="요원정보"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/HomeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="홈"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/CommunityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="커뮤니티"
            android:layout_margin="10dp"/>
    </LinearLayout>

</RelativeLayout>