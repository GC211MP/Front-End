<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">



    /* stage buttons */

    <Button
        android:id="@+id/PrologueStageButton"
        android:layout_width="350dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:text="Prologue"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Stage1Button"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_below="@id/PrologueStageButton"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Stage1"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Stage2Button"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_below="@id/PrologueStageButton"
        android:layout_alignParentRight="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="20dp"
        android:text="Stage2"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Stage3Button"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_below="@id/Stage1Button"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Stage3"
        android:textSize="20dp"/>


    <Button
        android:id="@+id/Stage4Button"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_below="@id/Stage1Button"
        android:layout_alignParentRight="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="Stage4"
        android:textSize="20dp" />


    /* menu bar */
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/AgentInfoButton"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:scaleType="centerInside"
            android:src="@drawable/agent_info" />

        <ImageButton
            android:id="@+id/HomeButton"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:scaleType="centerInside"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/CommunityButton"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:scaleType="centerInside"
            android:src="@drawable/community" />
    </LinearLayout>

</RelativeLayout>