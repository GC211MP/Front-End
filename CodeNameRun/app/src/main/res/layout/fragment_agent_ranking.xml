<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgentRanking">

    <TextView
        android:id="@+id/ranking_name"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="#00ff0000"
        android:gravity="center"
        android:text="Ranking"
        android:textColor="@color/warm_white"
        android:textSize="30dp"/>

    /* stage button */

    <Button
        android:id="@+id/ranking_stage1_btn"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ranking_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Stage1"
        android:textColor="@color/warm_white" />

    <Button
        android:id="@+id/ranking_stage2_btn"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ranking_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ranking_stage1_btn"
        android:text="Stage2"
        android:textColor="@color/warm_white" />

    <Button
        android:id="@+id/ranking_stage3_btn"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ranking_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ranking_stage2_btn"
        android:text="Stage3"
        android:textColor="@color/warm_white" />

    <Button
        android:id="@+id/ranking_stage4_btn"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ranking_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/ranking_stage3_btn"
        android:text="Stage4"
        android:textColor="@color/warm_white" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ranking_stage1_btn"></FrameLayout>

</RelativeLayout>